<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/waves_cyc"
    tools:context=".SettingActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:shrinkColumns="0"
        android:paddingTop="15dp"
        android:stretchColumns="0">
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#FF909090"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textOperations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Operations"
                android:textColor="#000000"
                android:textSize="35dp"
                android:textStyle="bold" />

        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#FF909090"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">

            <RadioGroup
                android:id="@+id/RedioGroupOperations"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioBtnAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Sum" />

                    <RadioButton
                        android:id="@+id/radioBtnSub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Subtraction" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioBtnMultiply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Multiplication" />

                    <RadioButton
                        android:id="@+id/radioBtnDiv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Division" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioBtnMix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Mix" />
                </LinearLayout>

            </RadioGroup>
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#FF909090"
            android:layout_marginTop="20dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textDifficulty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Difficulty"
                android:textColor="#000000"
                android:textSize="35dp"
                android:textStyle="bold" />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#FF909090"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">

            <RadioGroup
                android:id="@+id/RedioGroupDifficulty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtnEasy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Easy" />

                <RadioButton
                    android:id="@+id/radioBtnMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Medium" />

                <RadioButton
                    android:id="@+id/radioBtnHard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hard"
                    android:textStyle="bold" />

            </RadioGroup>
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#FF909090"
            android:layout_marginTop="20dp"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <TextView
                android:id="@+id/textConfigTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Timer"
                android:textColor="#000000"
                android:textSize="35dp"
                android:textStyle="bold" />
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#FF909090"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">

            <RadioGroup
                android:id="@+id/RedioGroupTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtnNoTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No Time"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioBtnCountdownSixty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="60s"
                    android:textStyle="bold" />


            </RadioGroup>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btn_setting_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/shape_rectangle"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="saveSetting"/>

        <Button
            android:id="@+id/btn_setting_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/shape_rectangle"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:onClick="cancelSetting"/>
    </LinearLayout>

</LinearLayout>